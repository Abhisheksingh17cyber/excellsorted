# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Logging
LOG_LEVEL=info

# File Upload Limits
MAX_FILE_SIZE=50
MAX_FILES=10

# Redis (for job queue)
REDIS_URL=redis://localhost:6379

# Database (if using one)
# DATABASE_URL=mongodb://localhost:27017/smart-data-organizer

# OpenAI API (optional, for advanced instruction parsing)
# OPENAI_API_KEY=your_openai_api_key_here

# JWT Secret (if implementing authentication)
# JWT_SECRET=your_jwt_secret_here

# File Storage
UPLOAD_DIR=uploads
OUTPUT_DIR=output
TEMP_DIR=temp

# Processing Configuration
DEFAULT_PROCESSING_TIMEOUT=300
MAX_CONCURRENT_JOBS=5

# Chart Configuration
CHART_WIDTH=800
CHART_HEIGHT=600

# Security
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
